---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About";
const pageDescription =
  "Richmann - Product designer - designing clean, thouhtful user experiences.";
const ogURL = "https://design.richmnn.com/about";
const keywords =
  "Richmann Addai, product design portfolio, UX design, UI designer Ghana, user interface design, digital product design, creative designer, Figma expert, clean design systems, product strategy, SaaS designer";
