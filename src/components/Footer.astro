<style>
  p {
    color: var(--color-tertiary);
  }

  p:hover {
    color: var(--color-secondary);
    cursor: pointer;
    text-decoration: underline;
  }

  .avatar {
    display: inline-block;
    margin-right: 20px;
    width: 26px;
    height: 26px;
    border-radius: 100%;
    background: var(--color-bgsecondary);
    border: 1px solid var(--color-tertiary);
    box-shadow: inset 2px -2px 3px var(--color-tertiary);
    position: relative;
    animation: head-rotation 8s infinite ease;
  }

  @keyframes head-rotation {
    0% {
      box-shadow: inset 2px -2px 3px var(--color-tertiary);
    }

    20% {
      box-shadow: inset 4px -2px 3px var(--color-tertiary);
    }

    30% {
      box-shadow: inset 2px -2px 3px var(--color-tertiary);
    }

    55% {
      box-shadow: inset 4px 1px 3px var(--color-tertiary);
    }

    65% {
      box-shadow: inset 2px -2px 3px var(--color-tertiary);
    }

    100% {
      box-shadow: inset 2px -2px 3px var(--color-tertiary);
    }
  }

  .avatar::before {
    content: "";
    height: 3px;
    width: 3px;
    border-radius: 100%;
    background: var(--color-tertiary);
    position: absolute;
    top: 10px;
    left: 10px;
    animation: eye-movement 8s infinite ease;
  }

  .avatar::after {
    content: "";
    height: 3px;
    width: 3px;
    border-radius: 100%;
    background: var(--color-tertiary);
    position: absolute;
    top: 10px;
    left: 18px;
    animation: eye-movement 8s infinite ease;
  }

  @keyframes eye-movement {
    0% {
      transform: translateX(0px) translateY(0) scaleY(1);
    }

    20% {
      transform: translateX(2px) translateY(0) scaleY(1);
    }

    30% {
      transform: translateX(-2px) translateY(0) scaleY(1);
    }

    55% {
      transform: translateX(0px) translateY(4px) scaleY(1);
    }

    65% {
      transform: translateX(0px) translateY(0px) scaleY(0.5);
    }

    70% {
      transform: translateX(0px) translateY(0px) scaleY(1);
    }

    100% {
      transform: translateX(0px) translateY(0px) scaleY(1);
    }
  }
</style>
