---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

import DesktopNav from "../components/DesktopNav.astro";
import MusicPlayer1 from "../components/MusicPlayer1.astro";
import MobileNav from "../components/MobileNav.astro";
import HeroAnimation from "../components/HeroAnimation.astro";

const { pathname } = Astro.url;

// Meta tags for seo data
const { pageTitle } = Astro.props;
const { pageDescription } = Astro.props;
const { ogURL } = Astro.props;
const { keywords } = Astro.props;
---

<html lang="en" transition:name="root" transition:animate="fade">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- For view transitions -->
    <ClientRouter />

    <!-- Favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png?=v2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png?=v2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png?=v2"
    />
    <link rel="manifest" href="/favicon/site.webmanifest?=v2" />

    <!-- Meta Tags For SEO -->
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Richmann Addai" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta
      property="og:image"
      content="https://design.richmnn.com/favicon/android-chrome-512x512.png?=v2"
    />
    <meta property="og:url" content={ogURL} />
    <meta property="og:type" content="website" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta
      name="twitter:image"
      content="https://design.richmnn.com/favicon/android-chrome-512x512.png?=v2"
    />
    <link rel="canonical" href="https://design.richmnn.com" />

    <!-- Rich Results / Structured Data for Personal Site -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Richmann Addai",
        "url": "https://design.richmnn.com",
        "image": "https://design.richmnn.com/favicon/android-chrome-512x512.png",
        "jobTitle": "Design Engineer",
        "sameAs": [
          "https://github.com/Bigrichh",
          "https://linkedin.com/in/richmnn"
        ]
      }
    </script>

    <!-- Google font import  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Theme color for browser UI -->
    <meta name="theme-color" content="#000000" />

    <!-- Apple-specific settings -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <title>2025 Richmnn | {pageTitle}</title>
  </head>


  <body class="bg-bgprimary overflow-x-clip">
    <main class="flex flex-col w-full relative">
      <!-- Navigation -->
      <div class="absolute top-0 left-0 w-full z-50 block lg:hidden">
        <MobileNav />
      </div>

      <!-- Hero section -->
      <section
        class={`hero-wrapper w-full h-[100vh] flex flex-col items-center pt-[220px] md:pt-[200px] lg:pt-[160px] relative overflow-x-clip ${pathname !== "/" ? "hidden" : ""}`}
      >
        <div class="w-fit flex flex-col gap-[32px] items-center">
          <!-- Header Intro Text -->
          <div class="w-[342px] md:w-fit flex flex-col gap-[4px] text-center">
            <h1 class="text-primary">The Internet Corner of Richmann Addai</h1>
            <h2 class="text-secondary">
              Design Engineer ( Product Design x Web Development )
            </h2>
          </div>
          <!-- Animated Images -->
          <div class="w-fit" transition:persist>
            <HeroAnimation />
          </div>
        </div>
      </section>

      <!-- Content Section -->
      <section
        class={`flex flex-col md:flex-row  ${pathname !== "/" ? "mt-[120px] lg:mt-0" : "mt-[160px] lg:mt-[200px]"}`}
      >
        <!-- Outer wrapper: 1st & 2nd columns -->
        <div class="flex w-full md:w-1/2 border-[0.5px] border-bdprimary">
          <!-- First Column (Navigation, Links, Music & Status) -->
          <div class="w-1/3 h-[99.5vh] hidden lg:flex flex-col sticky top-0">
            <!-- Top half: Personal info + navigation links -->
            <div class="w-full h-1/2">
              <DesktopNav />
            </div>
            <!-- Bottom half: Music Player + Status -->
            <div
              class="w-full h-1/2 p-[32px] flex flex-col justify-between border-[0.5px] border-bdprimary"
            >
              <!-- MUSIC PLAYER -->
              <div class="w-full" transition:persist>
                <MusicPlayer1 />
              </div>

              <!-- AVAILABILITY / STATUS -->
              <div class="w-full flex flex-col gap-[4px]">
                <h2 class="text-primary">Availability</h2>
                <p class="text-secondary">Last updated 01-08-2025</p>
                <div class="flex items-center gap-[4px]">
                  <div
                    class="status-dot size-[10px] bg-[#008000] rounded-full flex items-center justify-center"
                  >
                    <div class="inner-dot size-[4px] bg-[#28FF28] rounded-full">
                    </div>
                  </div>
                  <p class="text-secondary">Looking for my next role</p>
                </div>
              </div>
            </div>
          </div>
          <div
            class="w-full lg:w-2/3 h-fit md:h-[99.5vh] p-[32px] border-[0.5px] border-bdprimary border-r-transparent sticky top-0"
          >
            <slot name="secondColumn" />
          </div>
        </div>
        <div
          class="w-full md:w-1/2 flex flex-col border-t-[0.5px] border-t-bdprimary pb-[120px] md:pb-0"
        >
          <slot name="thirdColumn" />
        </div>
      </section>
      <slot />
    </main>
    <!-- colcade masonry layout -->
    <script src="https://unpkg.com/colcade@0/colcade.js" data-astro-rerun
    ></script>
  </body>
</html>
